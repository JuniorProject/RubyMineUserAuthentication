<h1>
  <%= @recipe.name %>
</h1>
<div class="ingredients">
  <table>
    <tr>
      <th>Quantity</th>
      <th>Measurement</th>
      <th>Ingredient</th>
      <th>Additional Information</th>
    </tr>
    <%= render @recipe.recipe_ingredients %>
  </table>
  <% if @recipe.user_id == session[:user_id] %>
    <%= link_to 'Add Ingredient', new_user_recipe_recipe_ingredient_path(@user, @recipe.id), class: "myButton" %>
  <% end %>
</div>
<div class="comments">
  <%=render @recipe.comments %>
  <%= link_to 'Add Comment', new_user_recipe_comment_path(@user, @recipe.id), class: "myButton" %>
</div>